{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "label": "npm: compile",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "watch",
      "group": "build",
      "label": "npm: watch",
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    },
    {
      "label": "npm: version patch",
      "type": "shell",
      "command": "npm",
      "args": ["version", "patch", "--no-git-tag-version"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "npm",
      "script": "package",
      "group": "build",
      "label": "npm: package",
      "problemMatcher": [],
      "dependsOn": ["npm: compile", "npm: version patch"]
    }
  ]
}
